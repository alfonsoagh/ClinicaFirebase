<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen sin recorte: respeta proporción y crece de alto según corresponda -->
        <ImageView
            android:id="@+id/dlgImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_person"
            android:contentDescription="@string/infoPaciente" />

        <TextView
            android:id="@+id/dlgTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre (ID)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/dlgLinea1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Área • Médico"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/dlgLinea2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Género • Edad • Fecha"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/dlgLinea3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estatura • Peso"
            android:paddingTop="2dp" />
    </LinearLayout>
</ScrollView>
