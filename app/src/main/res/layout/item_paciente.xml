<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="#1F000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/itemTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre (ID)"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/itemSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Área • Médico"
                android:textColor="#7A000000"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/itemLineaExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Género • Edad • Fecha"
                android:textColor="#7A000000"
                android:paddingTop="2dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
