<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base de la app (Material 3, sin ActionBar porque usamos Toolbar propia) -->
    <style name="Theme.ClinicaSX" parent="Theme.Material3.Light.NoActionBar">
        <!-- Opcional: colores de marca -->
        <item name="colorPrimary">@color/md_primary</item>
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/md_primary</item>

        <!-- Para que MaterialButton/Outlined etc. tomen estilos por defecto -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Material3.Button.OutlinedButton</item>
    </style>

    <!-- Variante explícita sin ActionBar (por si algún Activity la usa) -->
    <style name="Theme.ClinicaSX.NoActionBar" parent="Theme.Material3.Light.NoActionBar" />

    <!-- ====== OVERLAYS QUE FALTAN (referenciados en app_bar_main.xml) ====== -->
    <!-- Overlay para la ActionBar/Toolbar -->
    <style name="Theme.ClinicaSX.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />

    <!-- Overlay para popups, menús y diálogos anclados a la Toolbar -->
    <style name="Theme.ClinicaSX.PopupOverlay" parent="ThemeOverlay.Material3" />
    <!-- Si prefieres overlay de diálogos:
         <style name="Theme.ClinicaSX.PopupOverlay" parent="ThemeOverlay.Material3.MaterialAlertDialog" /> -->

</resources>
